{
  "extends": "./tsconfig.base.json",
  "include": ["src", "test"],
  "compilerOptions": {
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "rootDir": ".",
    "noEmit": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "paths": {
      "@functorfactory/create-lib": ["src/index.ts"],
      "@functorfactory/create-lib/*": ["src/*"]
    }
  }
}
